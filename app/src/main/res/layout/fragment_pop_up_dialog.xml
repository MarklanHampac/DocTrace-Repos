<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@android:color/transparent"
    android:minHeight="500dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp"
    tools:context=".PopUpDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minWidth="350dp"
        android:minHeight="500dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="131dp"
            android:layout_height="110dp"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/app_logo_foreground"
            app:layout_constraintBottom_toTopOf="@+id/NotifContent"
            app:layout_constraintEnd_toEndOf="@+id/CloseButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/CloseButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/NotifContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/CloseButton"
            app:layout_constraintEnd_toEndOf="@+id/CloseButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/CloseButton"
            app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

        <Button
            android:id="@+id/CloseButton"
            android:layout_width="129dp"
            android:layout_height="57dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="#F80000"
            android:text="Close"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NotifContent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>