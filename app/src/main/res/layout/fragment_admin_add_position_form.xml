<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin_Ui.add_position.admin_add_position_form">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="107dp"
        android:layout_height="90dp"

        android:layout_marginStart="152dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_tag" />

    <TextView
        android:id="@+id/add_new_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="New Position"
        android:textColor="@color/third"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/position3"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <TextView
        android:id="@+id/position3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="253dp"
        android:text="New Position"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/positionbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/positionbox"
        app:layout_constraintTop_toBottomOf="@+id/add_new_position" />

    <EditText
        android:id="@+id/positionbox"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/round_border"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingTop="13dp"
        android:paddingEnd="0dp"
        android:paddingBottom="13dp"
        android:textColor="@color/third"
        android:textColorHint="#8006060A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_new_position"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/add_new_position"
        app:layout_constraintTop_toBottomOf="@+id/position3" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#0EC516"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel_button"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/positionbox"
        app:layout_constraintTop_toBottomOf="@+id/positionbox" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#F44336"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/positionbox"
        app:layout_constraintStart_toEndOf="@+id/save_button"
        app:layout_constraintTop_toBottomOf="@+id/positionbox" />


</androidx.constraintlayout.widget.ConstraintLayout>